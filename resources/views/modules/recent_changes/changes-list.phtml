use Fisharebest\Webtrees\I18N;

?>

<div class="list-group">
    <?php foreach ($records as $record) : ?>
        <a href="<?= e($record->url()) ?>" class="list-group-item list-group-item-action">
            <span class="d-block"><?= $record->fullName() ?></span>
            <?php if ($record->lastChangeTimestamp()->unix() !== 0) : ?>
