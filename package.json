{
  "name": "argon",
  "version": "0.14.2",
  "description": "",
  "private": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass": "sass --no-source-map --style=compressed src/scss/theme.scss dist/css/theme.css",
    "postcss": "postcss -r dist/css/*.css",
    "babel": "babel src/js/ -d dist/js/",
    "lint": "eslint src/js/",
    "uglify": "uglifyjs dist/js/script.js --compress --mangle -o dist/js/script.js",
    "dev:clean": "rm -r resources/css/ resources/js/",
    "dev:css": "sass --no-source-map --watch src/scss/theme.scss resources/css/theme.css",
    "dev:js": "babel src/js/ --watch -d resources/js/",
    "dev": "npm run dev:clean; concurrently --prefix-colors  \"bgBlue.bold,bgMagenta.bold\" \"npm:dev:css\" \"npm:dev:js\"",
    "build:clean": "rm -r dist/",
    "build:css": "npm run sass && npm run postcss",
    "build:js": "npm run lint && npm run babel && npm run uglify",
    "build:other": "cp module.php dist/ && cp -R resources/views/ dist/resources/",
    "build": "npm run build:clean; concurrently \"npm:build:css\" \"npm:build:js\" && npm run build:other"
  },
  "author": "Jonathan Chue",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.1.0",
    "cssnano": "^5.1.7",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "postcss": "^8.4.13",
    "postcss-cli": "^9.1.0",
    "postcss-url": "^10.1.3",
    "sass": "^1.51.0",
    "uglify-js": "^3.15.4"
  }
}
